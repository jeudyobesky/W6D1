<!DOCTYPE html>
<html>
  <head>
    <title>TheGossipProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
  </head>

  <body>
  <header>
  <!-- As a heading -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid collapse navbar-collapse">
      <%= link_to root_path, class: "navbar-brand mb-0 h1" do %>
        <span class="navbar-brand mb-0 h1">Gossip project</span>
      <% end %>
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to 'contact', contact_path, class: "nav-link active"%>
        </li>
        <li class="nav-item">
          <%= link_to 'team', team_path, class: "nav-link"%>
        </li>
        <li class="nav-item">
          <%= link_to 'tout les potins', posts_path, class: "nav-link"%>
        </li>
          <li class="nav-item">
          <%= link_to 'Nos auteurs', authors_path, class: "nav-link"%>
        </li>
      </ul>
    </div>
  </nav>

  </header>
    <%= yield %>
  </body>
</html>
